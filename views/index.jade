extends layout

block content
  h1= title
  p IBM Cloud Private Demo with MongoDB as a Service

  // Wrapper
  #wrapper

    // USER INFO
    #userInfo
      h2 Ticket Info
      p
        strong Name:
        |  <span id='userInfoName'></span>
        br
        strong Location:
        |  <span id='userInfoLocation'></span>
        br
        strong Problem:
        |  <span id='userInfoProblem'></span>
        br
        strong Solution:
        |  <span id='userInfoSolution'></span>

    // /USER INFO

    // USER LIST
    h2 Open Tickets
    #userList
      table
        thead
          th Employee ID
          th Customer Name
          th Phone
          th Serviced?
        tbody
    // /USER LIST

    // ADD USER
    h2 Add Ticket
    #addUser
      fieldset
        input#inputUserName(type='text', placeholder='Employee ID')
        input#inputUserFullname(type='text', placeholder='Customer Name')
        input#inputUserPhone(type='text', placeholder='Phone')
        br
        input#inputUserLocation(type='text', placeholder='Location')
        input#inputUserProblem(type='text', placeholder='Problem')
        input#inputUserSolution(type='text', placeholder='Solution')
        br
        br
        button#btnAddUser Submit
    // /ADD USER
    
  // /WRAPPER

  h6 Written by Patrick Buoniconti
